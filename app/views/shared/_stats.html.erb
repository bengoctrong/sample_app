<% set_current_user %>
<div class="stats">
  <%= link_to following_user_path(@user) do %>
    <strong class="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t ".following" %>
  <% end %>
  <%= link_to followers_user_path(@user) do %>
    <strong class="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
