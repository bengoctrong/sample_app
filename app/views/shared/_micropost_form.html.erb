<%= form_for @micropost, html: { multipart: true } do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.picture_accept %>
  </span>
<% end %>

<%= javascript_include_tag "micropost_form" %>
